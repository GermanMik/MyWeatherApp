<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@android:color/holo_blue_dark"
    tools:context="ru.geekbrains.homework.myweatherapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner_of_cities"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:entries="@array/cities_array"></Spinner>


        <Button
            android:id="@+id/choose_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_weather" />

    </LinearLayout>
    <TextView
        android:id="@+id/weather_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/weather_field"/>


</LinearLayout>



